<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MP01_03_201604140">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="120px"
        android:singleLine="true"
        android:ellipsize="start"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_7"
                android:text="7"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_8"
                android:text="8"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_9"
                android:text="9"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button_slash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_slash"
                android:text="/"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_4"
                android:text="4"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_5"
                android:text="5"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_6"
                android:text="6"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button_mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_mul"
                android:text="*"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_3"
                android:text="3"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_2"
                android:text="2"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_1"
                android:text="1"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_sub"
                android:text="-"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_dot"
                android:text="."
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_0"
                android:text="0"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_clear"
                android:text="C"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick_add"
                android:text="+"
                android:autoSizeMaxTextSize="120px"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <Button
            android:id="@+id/equal_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:onClick="onClick_equal"
            android:text="="
            android:autoSizeMaxTextSize="120px"
            android:autoSizeTextType="uniform" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>